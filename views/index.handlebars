<div class="container">
  <div class="row">
    <div class="center-align">
      <img src="assets/img/burgerimg.png">
      <h2>EAT-DA-BURGER</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s12">
      <h4 class="center-align">Enter a burger you want to eat!</h4>
    </div>
  </div>
  <div class="row">
    <div class="col s6 push-s3">
      <form class="create-form center-align">
        <div class="form-group">
          <input class="center-align" type="text" id="newBurger" name="burger" placeholder="burger to devour">
          <button class="btn waves-effect waves-light orange darken-4" id="addBurger" type="submit">ADD DA BURGER</button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>


<div class="container">
  <div class="row">
    <div class="col s6">
      <h3 class="center-align">Burgers to Devour</h3>
      <ul>
        {{#each burgers}} {{#unless devoured}}
        <li class="center-align">
          {{this.burger_name}}
          <a class="material-icons eatMe" data-id="{{this.id}}" data-newDevoured="{{devoured}}">local_dining</a>
        </li>
        <hr> {{/unless}} {{/each}}

      </ul>
    </div>
    <div class="col s6">
      <h3 class="center-align">Burgers Devoured</h3>
      <ul>
        {{#each burgers}} {{#if devoured}}
        <li class="center-align">
          {{this.burger_name}} 
          <i class="material-icons deleteBurger"  data-id="{{this.id}}" data-newDevoured="{{devoured}}">delete</i>
        </li>
        <hr> {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>